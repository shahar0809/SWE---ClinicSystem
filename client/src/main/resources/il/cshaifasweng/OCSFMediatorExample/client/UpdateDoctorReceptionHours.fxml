<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.UpdateHoursController">
   <children>
      <Label alignment="CENTER" text="Doctors" />
      <ListView fx:id="nameList" onMouseClicked="#onMouseClick" />
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Button fx:id="SelectDate" mnemonicParsing="false" onAction="#onDateSelect" text="Select Date" />
            <TextField fx:id="DoctorDate" promptText="Date" />
         </children>
      </HBox>
      <TableView fx:id="table" prefHeight="234.0" prefWidth="546.0">
         <columns>
            <TableColumn fx:id="reservedColumn" prefWidth="214.0" text="Reserved" />
            <TableColumn fx:id="hourColumn" minWidth="0.0" prefWidth="330.0" text="Time" />
         </columns>
      </TableView>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Button fx:id="ReserveHours" mnemonicParsing="false" onAction="#onReserveHours" text="Reserve Hours" />
            <Button fx:id="FreeHours" mnemonicParsing="false" onAction="#onFreeHours" text="Free Hours" />
            <TextField fx:id="DoctorStartingHour1" promptText="Starting hour" />
            <TextField fx:id="DoctorEndingHour1" promptText="Ending hour" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="15.0" />
   </padding>
</VBox>
