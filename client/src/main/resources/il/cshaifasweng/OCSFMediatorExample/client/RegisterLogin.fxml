<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.RegisterLoginController">
    <children>
      <HBox alignment="CENTER" spacing="4.0">
         <children>
              <Label alignment="CENTER" prefWidth="70.0" text="Username" />
            <TextField fx:id="usernameField" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="4.0">
         <children>
            <Label alignment="CENTER" prefWidth="70.0" text="Password" />
            <PasswordField fx:id="passwordField" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="4.0">
         <children>
              <Button fx:id="loginButton" onAction="#login" text="Login" />
            <Button fx:id="registerButton" layoutX="66.0" layoutY="10.0" onAction="#register" text="Register" />
         </children>
      </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
